{
	"manifest_version": 2,
	"name": "HideMyNavigation",
	"version": "0.0.1",
	"description": "Hides navigation and puts it onto page previews",
        "permissions": ["tabs", "contextMenus", "menus", "activeTab", "browserSettings"],
	"background": {
           "scripts": ["browser.js"]
        },
        "content_scripts": [
        {
        
          "matches": [ "<all_urls>" ],
          "js": [ "content.js" ]
        } 
        ],
        "browser_action": {
          "default_title": "Navigation",
          "default_popup": "nav.html"
        },
        "web_accessible_resources": [
         "script.js", "style.css", "content.js"
        ]
}

